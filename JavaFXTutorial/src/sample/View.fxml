<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="401.0" prefWidth="483.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <VBox fx:id="vbox" prefHeight="300.0" prefWidth="300.0" style="-fx-padding: 10; -fx-border-style: solid inside; -fx-border-width: 2; -fx-border-insets: 5; -fx-border-radius: 5; -fx-border-color: blue;">
         <children>
            <Label text="Type here:">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin></Label>
            <TextField fx:id="inputText" onKeyPressed="#onKeyPressed">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextField>
            <Button mnemonicParsing="false" onAction="#printOutput" prefWidth="80.0" text="OK">
               <VBox.margin>
                  <Insets left="175.0" top="20.0" />
               </VBox.margin></Button>
            <Label text="What you've typed so far:">
               <VBox.margin>
                  <Insets left="10.0" top="20.0" />
               </VBox.margin></Label>
            <TextArea fx:id="outputText" prefHeight="200.0" prefWidth="459.0">
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
